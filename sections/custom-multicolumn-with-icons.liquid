<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --icon-background: {{ section.settings.icon_background }};
    {%- render 'section-variables', section: section -%}
  }
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="jc-container{% if section.settings.full_width %} page-width--full{% endif %} relative">
    {%- render 'section-heading', section: section -%}

    <div class="relative block text-with-icons jc-flex jc-flex-wrap jc-gap-2 z-1 jc-items-center jc-justify-center" watch-css>
      {%- liquid
        assign withGradient = false
        if section.settings.gradient_highlight != blank and section.settings.gradient_highlight != 'rgba(0,0,0,0)'
          assign withGradient = true
        endif
      -%}
      {%- for block in section.blocks -%}
        <div class="jc-w-fit jc-inline-flex xl:text-{{ section.settings.text_alignment }} text-center" {{ block.shopify_attributes }}>
          <div class="jc-flex jc-p-2 jc-px-4 !jc-w-fit jc-gap-1 jc-rounded-full jc-bg-[var(--icon-background)]">
            {% render "g-render-image"
              class: "jc-w-5 jc-h-5 jc-mr-1.5",
              img: block.settings.custom_icon,
              size: "300",
              alt: block.settings.custom_icon.alt,
              width: "300",
              height: "300"
              loading: "eager"
              id: block.settings.custom_icon.id
            %}
            <span class="jc-text-sm md:jc-text-base">{{ block.settings.heading }}</span>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

